# PROVIDE: smartd
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown
# XPATH: //system/smart

smartd_enable=${smartd_enable-"NO"}

. /etc/rc.subr

name="smartd"
rcvar=`set_rcvar`
pidfile="/var/run/${name}.pid"
command="/usr/local/sbin/smartd"
command_args="--pidfile=${pidfile} --logfacility=local5"

load_rc_config ${name}
run_rc_command "$1"
