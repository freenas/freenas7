# PROVIDE: pccard
# REQUIRE: mountcritlocal
# KEYWORD: nojail

. /etc/rc.subr

name="pccard"
start_cmd="pccard_start"
stop_cmd=":"

load_rc_config $name

# Check if platform supports pccard.
_platform=`cat /etc/platform`
_platform=${_platform#*-}
if [ 0 -eq `echo "wrap net48xx" | grep -c "${_platform}"` ]; then
	pccard_enable="YES"
	debug "pccard_enable is set to YES."
fi

pccard_start()
{
	if [ ! -c /dev/card0 ]; then
		exit 0
	fi
	if checkyesno pccard_enable; then
		echo -n 'Setup PC-CARD:'

		case ${pccard_mem} in
		[Dd][Ee][Ff][Aa][Uu][Ll][Tt])
			/usr/sbin/pccardc pccardmem 0xd0000 1>/dev/null && echo -n ' memory'
			;;
		*)
			/usr/sbin/pccardc pccardmem ${pccard_mem} 1>/dev/null && echo -n ' memory'
			;;
		esac

		if [ -n "${pccard_beep}" ]; then
			/usr/sbin/pccardc beep ${pccard_beep} && echo -n ' beep'
		fi

		if [ -n "${pccard_conf}" ]; then
			pccardd_flags="${pccardd_flags} -f ${pccard_conf}"
		fi

		/usr/sbin/pccardd ${pccardd_flags} && echo -n ' pccardd'
		echo '.'
	fi
}

run_rc_command "$1"
