	/* parse the configuration and include all functions used below */
	require_once("config.inc");
	require_once("functions.inc");
	require_once("util.inc");

	$fp = fopen('php://stdin', 'r');

	echo "\nDo you want to use DHCP for IPv4? (y/n) ";

	if (strcasecmp(chop(fgets($fp)), "y") == 0) {
		$config['interfaces']['lan']['ipaddr'] = "dhcp";
	} else {
		do {
			echo "\nEnter new LAN IPv4 address (press 'Enter' to abort): ";
			$lanip = chop(fgets($fp));
			if ($lanip === "") {
				exit(0);
			}
		} while (!is_ipaddr($lanip));

		echo "\nSubnet masks are entered as bit counts (as in CIDR notation) in " . get_product_name() . ".\n";
		echo "e.g. 255.255.255.0 = 24\n";
		echo "     255.255.0.0   = 16\n";
		echo "     255.0.0.0     = 8\n\n";

		do {
			echo "Enter new LAN subnet bit count: ";
			$lanbits = chop(fgets($fp));
			if ($lanbits === "") {
				exit(0);
			}
		} while (!is_numeric($lanbits) || ($lanbits < 1) || ($lanbits > 31));

		$config['interfaces']['lan']['ipaddr'] = $lanip;
		$config['interfaces']['lan']['subnet'] = $lanbits;

		do {
			echo "Enter IPv4 default gateway (press 'Enter' to skip): ";
			$gatewayip = chop(fgets($fp));
			if ($gatewayip === "") {
				break;
			}
		} while (!is_ipaddr($gatewayip));

		if ($gatewayip) {
			$config['interfaces']['lan']['gateway'] = $gatewayip;
		}

		do {
			echo "Enter DNS IPv4 address(press 'Enter' to skip): ";
			$dnsserverip = chop(fgets($fp));
			if ($dnsserverip === "") {
				break;
			}
		} while (!is_ipaddr($dnsserverip));

		if ($dnsserverip) {
			$config['system']['dnsserver'] = $dnsserverip;
		}
	}
	
	echo "\nDo you want to use AutoConfiguration for IPv6? (y/n) ";

	if (strcasecmp(chop(fgets($fp)), "y") == 0) {
		$config['interfaces']['lan']['ipv6addr'] = "auto";
	} else {
		do {
			echo "\nEnter new LAN IPv6 address (press 'Enter' to abort): ";
			$lanip = chop(fgets($fp));
			if ($lanip === "") {
				exit(0);
			}
		} while (!is_ipaddr($lanip));
	}
	
	$config['interfaces']['lan']['ipv6addr'] = $lanip;
	
	$proto = "http";
	if ($config['system']['webgui']['protocol'] == "https") {
		echo "\nDo you want to revert to HTTP as the webGUI protocol? (y/n) ";
		if (strcasecmp(chop(fgets($fp)), "y") == 0)
			$config['system']['webgui']['protocol'] = "http";
		else
			$proto = "https";
	}

	write_config();

	interfaces_lan_configure();

  /* Get current IP */
  $if = $config['interfaces']['lan']['if'];
  $lanip = get_ipaddr($if);
  $lanipv6 = get_ipv6addr($if);

  unset($laninfo);
  if ($config['interfaces']['lan']['ipaddr'] == "dhcp")
    $laninfo = "$lanip";
  else
    $laninfo = "$lanip/$lanbits";

	echo <<<EOD
	
The LAN IP address has been set to:
- IPv4: $laninfo
- IPv6: $lanipv6
You can now access the webGUI by opening the following URL
in your browser:

$proto://$lanip/
$proto://[$lanipv6]/

Press ENTER to continue.

EOD;

	fgets($fp);
?>
