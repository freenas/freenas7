# PROVIDE: ushare
# REQUIRE: DAEMON
# KEYWORD: shutdown

. /etc/rc.subr
. /etc/rc.subrconf

name="ushare"
rcvar=`set_rcvar`
command="/usr/local/bin/${name}"
command_args="--daemon --xbox --cfg=/var/etc/$name.conf"
stop_postcmd="ushare_postcmd"

ushare_postcmd()
{
	# Delete multicast route.
	/sbin/route delete -net 239.0.0.0 > /dev/null
}

load_rc_config $name
create_conf_file $name
run_rc_command "$1"
