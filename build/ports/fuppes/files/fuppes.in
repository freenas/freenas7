. /etc/rc.subr
. /etc/util.subr
. /etc/configxml.subr

name="fuppes"
rcvar=`set_rcvar`

load_rc_config "${name}"

# Custom commands
start_precmd="start_precmd"
stop_postcmd="stop_postcmd"
rebuilddb_cmd="dboptions_cmd"
updatedb_cmd="dboptions_cmd"
rebuildvcont_cmd="dboptions_cmd"
extra_commands="rebuilddb updatedb rebuildvcont"

# Defaults
fuppes_enable=${fuppes_enable:-"NO"}
fuppes_configdir=${fuppes_configdir-"/var/etc"}
fuppes_config=${fuppes_config-"${fuppes_configdir}/${name}.cfg"}
fuppes_vfolder_config=${fuppes_vfolder_config-"/usr/local/share/${name}/vfolder.cfg"}
fuppes_loglevel=${fuppes_loglevel-"1"}
fuppes_logfile=${fuppes_logfile-"/var/log/${name}.log"}
fuppes_port=${fuppes_port-"49152"}
fuppes_local_charset=${fuppes_local_charset-"UTF-8"}
fuppes_use_imagemagick=${fuppes_use_imagemagick-"false"}
fuppes_use_taglib=${fuppes_use_taglib-"true"}
fuppes_use_libavformat=${fuppes_use_libavformat-"true"}

command="/usr/local/bin/${name}d"
command_args="--config-dir ${fuppes_configdir} --config-file ${fuppes_config} --vfolder-config-file ${fuppes_vfolder_config} --log-level ${fuppes_loglevel} --log-file ${fuppes_logfile}"

# Set kill signal to KILL, otherwise fuppes takes too long to terminate.
sig_stop=${sig_stop-"KILL"}

start_precmd()
