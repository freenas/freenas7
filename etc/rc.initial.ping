	/* parse the configuration and include all functions used below */
	require_once("config.inc");
	require_once("functions.inc");
	
	$fp = fopen('php://stdin', 'r');
	
	echo "\nEnter a host name or IP address: ";

	$pinghost = chop(fgets($fp));
	
	if (is_ipv4addr($pinghost)) {
		echo "\n";
		echo "IPv4 address detected...\n";
		passthru("/sbin/ping -c 3 -n " . escapeshellarg($pinghost));
		echo "\nPress ENTER to continue.\n";
		fgets($fp);
	} else if (is_ipv6addr($pinghost)) {
		echo "\n";
		echo "IPv6 address detected...\n";
		passthru("/sbin/ping6 -c 3 -n " . escapeshellarg($pinghost));
		echo "\nPress ENTER to continue.\n";
		fgets($fp);
	} else {
		echo "\n";
		echo "Hostname supposed, trying IPv4 and IPv6 ping...\n";
		passthru("/sbin/ping -c 3 -n " . escapeshellarg($pinghost));
		passthru("/sbin/ping6 -c 3 -n " . escapeshellarg($pinghost));
		echo "\nPress ENTER to continue.\n";
		fgets($fp);
	}
	
