# PROVIDE: system_init
# BEFORE: SYSTEMINIT

. /etc/rc.subr

name="system_init"
stop_cmd=":"
start_cmd="start_cmd"

start_cmd()
{
	# If firmware.lock file exists, delete it (otherwise all WebGUI pages will be redirected to upgrade page).
	if [ -f "/var/run/firmware.lock" ]; then
		rm -f /var/run/firmware.lock
	fi

	# Start core system
	eval /etc/rc.d.php/${name}
	return $?
}

load_rc_config ${name}
run_rc_command "$1"
